<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logcat_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dip"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/dropdown_menu_byte"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

        <Button
            android:id="@+id/btnOpenByteSocketConnection"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Open Byte Socket" />

        <Button
            android:id="@+id/btnSelectImageAndSend"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center"
            android:text="select image form device" />


        <Button
            android:id="@+id/btnSendImagesFromDisk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Test batch sending a bunch of images" />

        <Button
            android:id="@+id/btnTestLocalImagesSend"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Send Images to local" />

        <Button
            android:id="@+id/btnSendThreeImagesToLocal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Send Three Potted Plants" />


    </LinearLayout>
</ScrollView>
