<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="Hostname"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/dropdown_menu"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >

        <Button
            android:id="@+id/btnStartStop"
            style="?android:attr/buttonStyleSmall"
            android:layout_alignParentRight="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnInternetTime"
            android:text="Start/Stopp timer"
            android:onClick="startStoppTimerClickHandler"  />


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/btnInternetTime"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/view"
            android:text="fetch time"
            android:onClick="getInternetTime" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnVideoProcessing"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="testvideoProcessingService"
            android:text="Test VideoProcessingService" />


        <Button
            android:id="@+id/btnOpenConnection"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="reopenSocketConnectionClickHandler"
            android:text="Open New Socket Connection" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/btnImageRead"
            android:text="Read image to bytes"
            tools:ignore="RtlHardcoded"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/btnFiller"
            android:onClick="readLocalImageClickHandler"/>




        <Button
            android:id="@+id/buttonPromptUser"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="sendCustomMessageClickHandler"
            android:text="@string/send_message_to_websocket" />

        <Button
            android:id="@+id/btnClose"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="onCloseSocketHandler"
            android:text="Close Socket Connection" />

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>