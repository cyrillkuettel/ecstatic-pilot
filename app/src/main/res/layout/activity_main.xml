<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="@string/select_hostname"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/dropdown_menu"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnOpenConnection"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="reopenSocketConnection"
            android:text="ReOpen Socket Connection" />

        <Button
            android:id="@+id/buttonPromptUser"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="sendCustomMessageClickHandler"
            android:text="@string/send_message_to_websocket" />

        <Button
            android:id="@+id/btnClose"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal|center"
            android:onClick="onCloseSocketHandler"
            android:text="Close Socket Connection" />

    </LinearLayout>


</LinearLayout>